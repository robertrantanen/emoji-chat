<div id="<%= dom_id room %>">
  <h2>
    <%= room.name %>
  </h2>

  <%= form_with(model: @message) do |form| %>
    <p class="emoji-picker-container">
      <%= form.text_area :content, class: 'form-control', data: { emojiable: true } %>
    </p>
    <%= form.hidden_field :room_id, value: @room.id %>
    <br/>
    <%= form.submit "New message" %>
  <% end %>
  <br>
  <div style="height:500px;width:500px;border-width:5px; border-style:solid; border-color:#9ACD32;overflow:auto;display: flex;flex-direction: column-reverse;">
    <% room.messages.reverse.each do |message| %>
      <div style="font-size:20px"><%= message.user.username %>: <%= content_with_emoji(message.content) %></div>
    <% end %>
  </div>
  <br>

</div>
